<%= form_with model: @contact, url: create_contact_path, local: true do |form| %>
  <div class="form">
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :name %>
        <%= form.text_field :name ,class: 'form-control', id:'name', placeholder:"Your Name" %>
      </div>
      <div class="form-group col-md-6">
        <%= form.label :email %>
        <%= form.text_field :email ,class: 'form-control', id:'email', placeholder:"Your Email" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :subject %>
      <%= form.text_field :subject,class: 'form-control', id:'subject', placeholder:"Your Subject" %>
    </div>
    <div class="form-group">
      <%= form.label :message %>
      <%= form.text_area :message , rows:'5', class: 'form-control', placeholder: "Message" %>
    </div>
    <%= form.submit "Send Message", class: 'btn btn-primary'%>
  </div>
<% end %>

